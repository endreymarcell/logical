{
  "name": "@endreymarcell/logical.ts",
  "version": "0.1.3",
  "description": "Logical state management for TypeScript applications",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js",
      "types": "./dist/esm/index.d.ts"
    }
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -p config/tsconfig-build-cjs.json",
    "build:esm": "tsc -p config/tsconfig-build-esm.json",
    "format": "prettier -w src/**/*",
    "test": "npm run test:types && npm run test:functions",
    "test:types": "tsc --noEmit",
    "test:functions": "jest tests/functions"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/endreymarcell/logical.ts.git"
  },
  "author": "Marcell Endrey <endrey.marcell@gmail.com>",
  "license": "GNU GPLv3",
  "devDependencies": {
    "@babel/core": "^7.16.12",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@types/jest": "^27.4.0",
    "babel-jest": "^27.4.6",
    "jest": "^27.4.7",
    "prettier": "^2.5.1",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "immer": "^9.0.12"
  }
}
